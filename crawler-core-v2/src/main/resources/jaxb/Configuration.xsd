<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://model.v2.core.crawler.beardeddev.pl/Configuration"
           xmlns:tns="http://model.v2.core.crawler.beardeddev.pl/Configuration">
    
    <xs:element name="rootElementConfig" type="tns:rootElementConfig"/>
    
    <xs:complexType name="attributeConfig">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="attributeName"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    
    <xs:complexType name="textNodeConfig">
        <xs:simpleContent>
            <xs:extension base="xs:string">
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    
    <xs:complexType name="selectorConfig">
        <xs:simpleContent>
            <xs:extension base="xs:string">
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    
    <xs:simpleType name="type">
        <xs:restriction base="xs:string">
            <xs:enumeration value="INTEGER"/>
            <xs:enumeration value="STRING"/>
        </xs:restriction>
    </xs:simpleType>
    
    <xs:complexType name="elementConfig">
        <xs:sequence>
            <xs:choice>
                <xs:element type="tns:attributeConfig" name="attribute" minOccurs="0"/>
                <xs:element type="tns:textNodeConfig" name="textNode" minOccurs="0"/>
            </xs:choice>
            <xs:element type="xs:string" name="elementName"/>
            <xs:element type="tns:type" name="elementType"/>
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="rootElementConfig">
        <xs:sequence>
            <xs:element type="tns:selectorConfig" name="selector"/>
            <xs:element type="tns:elementConfig" name="elements" maxOccurs="unbounded" minOccurs="0"/>
            <xs:element type="xs:int" name="maxVisists"/>
        </xs:sequence>
    </xs:complexType>
    
</xs:schema>

